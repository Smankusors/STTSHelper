{
  "manifest_version": 2,
  "name": "iSTTS Helper",
  "description": "A browser extension to help iSTTS students with the provided information systems.",
  "version": "0.5.96",
  "author": "Smankusors (Antony Kurniawan)",
  "homepage_url": "http://sim.stts.edu",
  "icons": {
    "16" : "img/icon_16.png",
    "24" : "img/icon_24.png",
    "32" : "img/icon2_32.png",
    "64" : "img/icon2_64.png",
    "128" : "img/icon2_128.png",
    "256" : "img/icon2_256.png"
  },
  "browser_action": {
    "default_icon": {
      "16" : "img/icon_16.png",
      "24" : "img/icon_24.png",
      "32" : "img/icon2_32.png",
      "64" : "img/icon2_64.png",
      "128" : "img/icon2_128.png",
      "256" : "img/icon2_256.png"
	},
    "default_popup": "main.html"
  },
  "content_scripts": [{
      "matches": ["http://sim.stts.edu/index.*","http://sim.stts.edu/","https://sim.stts.edu/index.*","https://sim.stts.edu/"],
      "js": ["js/jquery.js","js/checkLogin.js"]
  }],
  "background": {
    "scripts": ["js/jquery.js","js/parser.js","js/checkNews.js"],
	"persistent": false
  },
  "permissions": [
    "activeTab",
	"storage",
	"alarms",
	"http://sim.stts.edu/",
	"https://sim.stts.edu/",
	"http://lkomp.stts.edu/"
  ],
  "web_accessible_resources": [
	"css/materialize.css",
	"js/materialize.js"
  ]
}